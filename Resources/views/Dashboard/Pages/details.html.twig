{% extends ibtikar_share_economy_cms_dashboard_layout %}

{% block title %}
    {{ page.title }}
{% endblock title %}

{% block body %}
    <!-- Main content -->
    <div class="content-wrapper">
        <!-- Basic button -->
        <div class="content-group">
            <div class="heading-elemnts">
                <div class="heading-btn-group">
                    <div class="heading-btn-group">
                        <a href="{{ path("ibtikar_share_economy_cms_dashboard_pages_edit", {'id': page.id}) }}" class="btn btn-primary heading-btn">Edit</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /basic button -->

        <!-- Dashboard content -->
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <form class="form-horizontal">
                            <!-- Navigation -->
                            <div class="panel panel-flat">
                                <div class="panel-heading">
                                    <h1 class="panel-title">{{ page.title }}</h1>
                                </div>
                                <div class="panel-body">
                                    <div class="tabbable">
                                        <ul class="nav nav-tabs nav-tabs-highlight">
                                            <li class="active">
                                                <a href="#arabic" data-toggle="tab">
                                                    <img src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/images/arabic.png') }}" alt="arabic" width="30" height="20"/>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#english" data-toggle="tab">
                                                    <img src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/images/english.png') }}" alt="english" width="30" height="20"/>
                                                </a>
                                            </li>
                                        </ul>
                                        <div class="tab-content">
                                            <div class="tab-pane active" id="arabic">
                                                <div class="form-group has-feedback">
                                                    <div class="control-label col-lg-10">
                                                        {{ page.titleAr }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="control-label col-lg-10">
                                                        {{ page.contentAr | raw }}
                                                    </div>
                                                </div>
                                            </div><!-- arabic end -->

                                            <div class="tab-pane" id="english">
                                                <div class="form-group has-feedback">
                                                    <div class="control-label col-lg-10">
                                                        {{ page.title }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="control-label col-lg-10">
                                                        {{ page.content | raw }}
                                                    </div>
                                                </div>
                                            </div><!-- english end -->
                                        </div>
                                    </div>
                                </div><!-- panel-body end -->
                            </div><!-- panel end -->
                        </form>
                    </div><!-- col-lg-12 -->
                </div><!-- row end -->
            </div><!-- col-lg-12 tabs -->
        </div>
        <!-- /dashboard content -->
    </div>
    <!-- /main content -->
{% endblock %}