{% extends ibtikar_share_economy_cms_dashboard_layout %}

{% block title %}{{'Edit CMS page details'|trans}}{% endblock %}

{% block body %}
    <!-- Main content -->
    <div class="content-wrapper">
        <!-- Basic button -->
        <div class="content-group">
            <div class="heading-elemnts">
                <div class="heading-btn-group">

                </div>
            </div>
        </div>
        <!-- /basic button -->

        <!-- Dashboard content -->
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <!-- Navigation -->
                        <div class="panel panel-flat">
                            <div class="panel-heading">
                                <h1 class="panel-title">{{'Edit CMS page details'|trans}}</h1>
                            </div>
                            <div class="panel-body dev-main-form-container">
                                {% form_theme form 'IbtikarShareEconomyDashboardDesignBundle:Theme:dashboard.html.twig' %}

                                {{ form_start(form, {'attr': {'novalidate':'', 'class': (attr.class|default('form-horizontal dev-js-validation'))} }) }}
                                <div class="tabbable">
                                    <ul class="nav nav-tabs nav-tabs-highlight">
                                        <li class="active">
                                            <a href="#arabic" data-toggle="tab">
                                                <img src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/images/arabic.png') }}" alt="arabic" width="30" height="20"/>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#english" data-toggle="tab">
                                                <img src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/images/english.png') }}" alt="english" width="30" height="20"/>
                                            </a>
                                        </li>
                                    </ul>
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="arabic">
                                            {{ form_row(form.titleAr) }}
                                            {{ form_row(form.contentAr) }}
                                        </div><!-- arabic end -->
                                        <div class="tab-pane" id="english">
                                            {{ form_row(form.title) }}
                                            {{ form_row(form.content) }}
                                        </div><!-- english end -->
                                    </div>
                                </div>
                                <hr>
                                <div class="row actionButtons">
                                    <div class="col-xs-12">
                                        <button class="btn btn-primary btn-lg dev-form-save-button" type="button">{% trans %}Save{% endtrans %}<i class="icon-checkmark4 position-right"></i></button>
                                        <button class="btn btn-default btn-lg dev-form-reset-button" type="button">{% trans %}Reset{% endtrans %}<i class="icon-cross2 position-right"></i></button>
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </div><!-- panel-body end -->
                        </div><!-- panel end -->
                    </div><!-- col-lg-12 -->
                </div><!-- row end -->
            </div><!-- col-lg-12 tabs -->
        </div>
        <!-- /dashboard content -->
    </div>
    <!-- /main content -->
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/ckeditor/ckeditor.js') }}"></script>
    <script src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/js/plugins/forms/styling/uniform.min.js') }}"></script>
    <script src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/js/plugins/forms/styling/switchery.min.js') }}"></script>
    <script src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/js/plugins/forms/styling/switch.min.js') }}"></script>
    <script src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/js/forms-layout.js') }}"></script>
    <script src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/js/plugins/jquery-validation/jquery.validate.min.js')}}"></script>
    <script src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/js/jquery.form.min.js')}}"></script>
    <script src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/js/dev/validation.js')}}"></script>
    {% if app.session.get('_locale') is defined and app.session.get('_locale') == 'en' %}
        <script src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/js/plugins/jquery-validation/messages_en.js')}}"></script>
    {% else %}
        <script src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/js/plugins/jquery-validation/messages_ar.js')}}"></script>
    {% endif %}
    {% if applyTextEditor %}
        <script>
            $(document).ready(function () {
                CKEDITOR.replace('page_contentAr', {
                    height: '400px',
                    extraPlugins: 'forms'
                });

                CKEDITOR.replace('page_content', {
                    height: '400px',
                    extraPlugins: 'forms'
                });
            });
        </script>
    {% endif %}
{% endblock %}